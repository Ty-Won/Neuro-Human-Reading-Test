<div id="sign-up-modal">
    <div class="modal-header">
        <h5 class="modal-title" id="sign-up-modal-title">Information</h5>
        <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">Ã—</span>
        </button>
    </div>
    <form action="/signUp" method="post">
        <div class="modal-body">
            <br>
            <input class="signup-form" id="sign-up-first-name" name="firstName" placeholder="First Name"
                   style="width: 40%;" type="text" required>
            <input class="signup-form" id="sign-up-last-name" name="lastName" placeholder="Last Name"
                   style="width: 40%;" type="text" required><br>
            <input class="signup-form" id="sign-up-email" name="email" placeholder="Email"
                   pattern='/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/'
                   type="email" required>
            <label for="bday"></label>
            <input class="date-picker signup-form" id="date-picker-2" name="birthdate" placeholder="Birth Date"
                   type="date" required><br>
            <input class="signin-form" id="sign-up-pass" name="password" placeholder="Password" style="width: 40%;"
                   type="password" pattern="^(?=.*\d).{5,14}$">
            <span id='pass-message' required></span><br>
            <input class="signin-form" id="sign-up-pass-verify" name="password-verification"
                   placeholder="Confirm Password" style="width: 40%;"
                   type="password" required><br>
            <br>
            <br>
        </div>
        <div class="modal-footer">
            <button class="btn begin-btn" data-dismiss="modal" type="button">Cancel</button>
            <button class="btn begin-btn" type="submit">Submit</button>
        </div>
    </form>
</div>